<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cap_name" />
    <TextView
        android:id="@+id/genre_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cap_genre"/>
    <TextView
        android:id="@+id/summary_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cap_summary" />
    <TextView
        android:id="@+id/premiered_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/cap_premiered" />

</LinearLayout>